<!doctype html>
<html>

<head>
  <% include ../partials/head %>
    <% console.log('views connected (and this is where they log!)') %>


</head>

<style>
  body {
    padding-top: 100px;
  }
</style>

<body>

  <div class="container">
    <div class="jumbotron text-center">
      <h1>
       Welcome to <br>Resu-Me</br>
      </h1>
      <% if( !req.user){ %>
        <p>Get Started:</p>
        <a href="/login" class="btn btn-default">
          <span class="fa fa-user"></span> Login</a>
        <a href="/signup" class="btn btn-default">
          <span class="fa fa-user"></span> Signup</a>
        <%}  %>

    </div>

    <div class="container">
      <!--Row with two equal columns-->
      <div class="row">
        <div class="col-sm-6 text-center">
          <!--Column left-->
          <h1>Get WordCloud</h1>
          <div id="custom-search-input">
            <div class="input-group col-md-12">
              <input type="text" id="search-query" class="search-query form-control input-lg" placeholder="Enter Word(s) in Job Title" />
              <span class="input-group-btn">
                <button class="btn btn-danger btn-lg" id="search-query" type="button">
                  <span class=" glyphicon glyphicon-search"></span>
              </button>
              </span>
            </div>
          </div>
        </div>
        <div class="col-sm-6 text-center">
          <!--Column right-->
          <% if(req.user) { %>
            <h1>Write New Resume</h1>
            <div id="write-new-resume">
              <span class="input-group-btn">
              <a href="/newresume" class="btn btn-danger btn-lg btn-block" type="button">
                <span class=" glyphicon glyphicon-pencil"></span>
              </a>
              </button>
              </span>
            </div>
            <%}else{ %>
              <h3>Login to Write Your Own Resume. On Your Profile Page, See How It Compares To Others</h3>
              <%} %>


        </div>
      </div>
      <br>
      <br>
      <br>

      <!-- WordCloud Partial -->
      <div class='container'>
        <div class='row'>
          <div id='spinner'></div>
        </div>
      </div>
      <% include ../partials/wordcloud %>

    </div>



    <% include ../partials/footer %>
</body>

</html>
