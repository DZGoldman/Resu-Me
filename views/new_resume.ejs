<!doctype html>
<html>

<head>
<% include ../partials/head %>
</head>

<style>
  body  { padding-top: 50px;  }
</style>

<body>
<form class="form-horizontal" action="/newresume" method="post">
<fieldset>

<!-- Form Name -->
<legend>Add New Resume Form</legend>

<!-- Name input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">Name</label>
  <div class="col-md-4">
  <input id="Name" name="Name" type="text" placeholder="Name" class="form-control input-md">

  </div>
</div>

<!-- Address input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">Address</label>
  <div class="col-md-4">
  <input id="Address" name="Address" type="text" placeholder="Street Address" class="form-control input-md">

  </div>
</div>

<!-- Email input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">Email</label>
  <div class="col-md-4">
  <input id="Email" name="Email" type="text" placeholder="Email Address" class="form-control input-md">

  </div>
</div>

<!-- Phone input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">Phone</label>
  <div class="col-md-4">
  <input id="Phone" name="Phone" type="text" placeholder="(000) 000-0000" class="form-control input-md">

  </div>
</div>


<!-- Education input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">Education</label>
  <div class="col-md-4">
  <input id="Education" name="Education" type="text" placeholder="School / Year of Graduation" class="form-control input-md">

  </div>
</div>

<!-- Experience input -->
<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">Experience</label>
  <div class="col-md-4">
    <input id="Title" name="Title" type="text" placeholder="Title" class="form-control input-md">
    <input id="Start Date" name="Start Date" type="text" placeholder="Start Date" class="form-control input-md">
    <input id="End Date" name="End Date" type="text" placeholder="End Date" class="form-control input-md">
    <input id="Description" name="Description" type="text" placeholder="Description" class="form-control input-md">
  </div>
</div>

<!-- Add New Experience button, *needs to trigger new experience partial* -->
<div class="form-group">
  <label class="col-md-4 control-label" for="singlebutton"></label>
  <div class="col-md-4">
    <button id="Experience_Button" name="Experience_Button" class="btn btn-danger">Add Additional Experience</button>
  </div>
</div>

<!-- Will probably need something like this on click:

<head>
<% include ../partials/head %>
</head>

-->


<!-- Summary input-->
<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">Summary</label>
  <div class="col-md-4">
  <input id="Summary" name="Summary" type="text" placeholder="Summary" class="form-control input-md">
  </div>
</div>

<!-- Submit New Resume Button -->
<div class="form-group">
  <label class="col-md-4 control-label" for="singlebutton"></label>
  <div class="col-md-4">
    <button id="Submit_Button" name="Submit_Button" <a href="#"
    class="btn btn-danger">Add New Resume</a></button>
  </div>
</div>

</fieldset>
</form>

</body>
</html>
